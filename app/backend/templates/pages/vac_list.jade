include ../kit/kit
include ../cl_vacancies_list
doctype html
html
    head
        title!= "UniOrg: Vacancies"
        link(rel="stylesheet" href="/static/css/styles.css")
    body#vacancies
        div.content-wrapper
            include ../header
            div.content
                div#vacancies-list.org-list_wrapper
                    h1 #{page.i18n.vacancies.toUpperCase()}
                    span.org-filters
                        form#vacancy-search-filters(action='/vacancies/search', method='GET')
                            input(name='sort', type='hidden', value='date')
                            span.vac-search_wrapper
                                input.input-search(name='vacancySearchText', placeholder=page.i18n.findVacancy)
                                i#vac-search.input-search_button
                            span.filters-wrapper
                                span.filters-label #{page.i18n.filterLabel}
                                mixin select_list({name: 'filterOrg', data: page.orgNames, hint: page.i18n.organization})
                                mixin select_list({name: 'filterEmployment', data: page.structure.employmentTypes, hint: page.i18n.employment})
                            span.sort-wrapper
                                span.filters-label #{page.i18n.sortLabel}
                                button#vac-sort-alphabet.filter-button #{page.i18n.alphabet}
                                button#vac-sort-date.filter-button.filter-button_active #{page.i18n.datesort}
                            
                            div#search-results
                                mixin vacancies_list(page.searchResult)

            include ../footer
       div.footer-bg
       div.overlay.hidden

       script(src="/static/js/libs.js")
       script(src="/static/js/scripts.js")
